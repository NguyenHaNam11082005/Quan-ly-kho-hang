@model WarehouseTransactionModel
@{
    ViewData["Title"] = "Nhập sản phẩm vào kho";
}

<div class="text-center">
    <h1 class="display-4">Nhập sản phẩm vào kho</h1>

    <a class="btn btn-primary mb-3" asp-controller="Warehouse" asp-action="ImportIndex">List</a>

    <form asp-area="Admin" asp-action="Import" asp-controller="Warehouse" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text text-danger mb-3"></div>

        <!-- Product -->
        <div class="mb-3 text-start">
            <label class="form-label">Sản phẩm</label>
            <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products">
                @* Bootstrap 5 tự hiển thị mũi tên, option đầu tiên sẽ được chọn mặc định *@
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

        <!-- Supplier -->
        <div class="mb-3 text-start">
            <label class="form-label">Nhà cung cấp</label>
            <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.Suppliers">
                @* Dropdown luôn có giá trị đầu tiên được chọn *@
            </select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>

        <!-- Quantity -->
        <div class="mb-3 text-start">
            <label class="form-label">Số lượng nhập</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <!-- Notes -->
        <div class="mb-3 text-start">
            <label class="form-label">Ghi chú</label>
            <input asp-for="Notes" class="form-control" />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Lưu</button>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>

