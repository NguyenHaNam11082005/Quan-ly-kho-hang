@model WarehouseTransactionModel

@{
    ViewData["Title"] = "Xuất sản phẩm trong kho";
}

<div class="text-center">
    <h1 class="display-4">Xuất sản phẩm trong kho</h1>

    <a class="btn btn-primary mb-3" asp-controller="Warehouse" asp-action="ExportIndex">List</a>

    <form asp-area="Admin" asp-action="Export" asp-controller="Warehouse" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text text-danger mb-3"></div>

        <!-- Product -->
        <div class="mb-3 text-start">
            <label class="form-label">Sản phẩm</label>
            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products">
                <option value="">-- Chọn sản phẩm --</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

     

        <!-- Quantity -->
        <div class="mb-3 text-start">
            <label class="form-label">Số lượng xuất</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <!-- Notes -->
        <div class="mb-3 text-start">
            <label class="form-label">Ghi chú</label>
            <input asp-for="Notes" class="form-control" />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Lưu</button>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
