@model UserRolesViewModel

<h2>Gán quyền cho: @Model.UserEmail</h2>

<form asp-action="Manage" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />
    <table class="table">
        <thead><tr><th>Chọn</th><th>Quyền</th></tr></thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" asp-for="Roles[i].IsSelected" />
                        <input type="hidden" asp-for="Roles[i].RoleName" />
                    </td>
                    <td>
                        @Model.Roles[i].RoleName
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
